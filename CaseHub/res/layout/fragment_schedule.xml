<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp" >

    <LinearLayout
        android:id="@+id/dayLabelsLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:baselineAligned="false" >

        <RelativeLayout
            android:id="@+id/timeHeaderRelativeLayout"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1" >
        </RelativeLayout>

        <!-- REMOVED SAT/SUN FOR NOW
        <RelativeLayout
            android:id="@+id/sundayHeaderRelativeLayout"
            style="@style/DayHeaderRelativeLayout" >

            <TextView
                android:id="@+id/sundayTextView"
                style="@style/DayHeaderTextView"
                android:text="@string/sunday" />
        </RelativeLayout>
         -->

        <RelativeLayout
            android:id="@+id/mondayHeaderRelativeLayout"
            style="@style/DayHeaderRelativeLayout" >

            <TextView
                android:id="@+id/mondayTextView"
                style="@style/DayHeaderTextView"
                android:text="@string/monday" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tuesdayHeaderRelativeLayout"
            style="@style/DayHeaderRelativeLayout" >

            <TextView
                android:id="@+id/tuesdayTextView"
                style="@style/DayHeaderTextView"
                android:text="@string/tuesday" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/wednesdayHeaderRelativeLayout"
            style="@style/DayHeaderRelativeLayout" >

            <TextView
                android:id="@+id/wednesdayTextView"
                style="@style/DayHeaderTextView"
                android:text="@string/wednesday" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/thursdayHeaderRelativeLayout"
            style="@style/DayHeaderRelativeLayout" >

            <TextView
                android:id="@+id/thursdayTextView"
                style="@style/DayHeaderTextView"
                android:text="@string/thursday" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fridayHeaderRelativeLayout"
            style="@style/DayHeaderRelativeLayout" >

            <TextView
                android:id="@+id/fridayTextView"
                style="@style/DayHeaderTextView"
                android:text="@string/friday" />
        </RelativeLayout>

        <!-- 
        <RelativeLayout
            android:id="@+id/saturdayHeaderRelativeLayout"
            style="@style/DayHeaderRelativeLayout" >

            <TextView
                android:id="@+id/saturdayTextView"
                style="@style/DayHeaderTextView"
                android:text="@string/saturday" />
        </RelativeLayout>
         -->
    </LinearLayout>

    <View
        android:id="@+id/dividerView"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/dayLabelsLinearLayout"
        android:background="@color/border" />

    <ScrollView
        android:id="@+id/scheduleScrollView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/dividerView"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:padding="0dp"
        android:scrollbars="none" >

        <RelativeLayout
            android:id="@+id/scheduleRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp" >

            <LinearLayout
                android:id="@+id/scheduleSplitterRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:padding="0dp" >

                <RelativeLayout
                    android:id="@+id/hoursRelativeLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="0dp" >
                    
                    <include layout="@layout/schedule_stripes" />

                    <TextView
                        android:id="@+id/time7amTextView"
                        style="@style/TimeTextView"
                        android:text="@string/time7am" />

                    <TextView
                        android:id="@+id/time8amTextView"
                        style="@style/TimeTextView"
                        android:layout_below="@+id/time7amTextView"
                        android:text="@string/time8am" />

                    <TextView
                        android:id="@+id/time9amTextView"
                        style="@style/TimeTextView"
                        android:layout_below="@+id/time8amTextView"
                        android:text="@string/time9am" />

                    <TextView
                        android:id="@+id/time10amTextView"
                        style="@style/TimeTextView"
                        android:layout_below="@+id/time9amTextView"
                        android:text="@string/time10am" />

                    <TextView
                        android:id="@+id/time11amTextView"
                        style="@style/TimeTextView"
                        android:layout_below="@+id/time10amTextView"
                        android:text="@string/time11am" />

                    <TextView
                        android:id="@+id/time12pmTextView"
                        style="@style/TimeTextView"
                        android:layout_below="@+id/time11amTextView"
                        android:text="@string/time12pm" />

                    <TextView
                        android:id="@+id/time1pmTextView"
                        style="@style/TimeTextView"
                        android:layout_below="@+id/time12pmTextView"
                        android:text="@string/time1pm" />

                    <TextView
                        android:id="@+id/time2pmTextView"
                        style="@style/TimeTextView"
                        android:layout_below="@+id/time1pmTextView"
                        android:text="@string/time2pm" />

                    <TextView
                        android:id="@+id/time3pmTextView"
                        style="@style/TimeTextView"
                        android:layout_below="@+id/time2pmTextView"
                        android:text="@string/time3pm" />

                    <TextView
                        android:id="@+id/time4pmTextView"
                        style="@style/TimeTextView"
                        android:layout_below="@+id/time3pmTextView"
                        android:text="@string/time4pm" />

                    <TextView
                        android:id="@+id/time5pmTextView"
                        style="@style/TimeTextView"
                        android:layout_below="@+id/time4pmTextView"
                        android:text="@string/time5pm" />

                    <TextView
                        android:id="@+id/time6pmTextView"
                        style="@style/TimeTextView"
                        android:layout_below="@+id/time5pmTextView"
                        android:text="@string/time6pm" />

                    <TextView
                        android:id="@+id/time7pmTextView"
                        style="@style/TimeTextView"
                        android:layout_below="@+id/time6pmTextView"
                        android:text="@string/time7pm" />

                    <TextView
                        android:id="@+id/time8pmTextView"
                        style="@style/TimeTextView"
                        android:layout_below="@+id/time7pmTextView"
                        android:text="@string/time8pm" />

                    <TextView
                        android:id="@+id/time9pmTextView"
                        style="@style/TimeTextView"
                        android:layout_below="@+id/time8pmTextView"
                        android:text="@string/time9pm" />
                </RelativeLayout>

                <!-- 
                <RelativeLayout
                    android:id="@+id/sundayRelativeLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" >
                </RelativeLayout>
                 -->

                <RelativeLayout
                    android:id="@+id/mondayRelativeLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" >
                    <include layout="@layout/schedule_stripes" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tuesdayRelativeLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" >
                    <include layout="@layout/schedule_stripes" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/wednesdayRelativeLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" >
                    <include layout="@layout/schedule_stripes" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/thursdayRelativeLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" >
                    <include layout="@layout/schedule_stripes" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/fridayRelativeLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" >
                    <include layout="@layout/schedule_stripes" />
                </RelativeLayout>

                <!-- 
                <RelativeLayout
                    android:id="@+id/saturdayRelativeLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" >
                </RelativeLayout>
                 -->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/currentTimeMarkerLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="100dp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="0dp" >

                <View
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_weight="1" />

                <View
                    android:id="@+id/currentTimeLineView"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="14"
                    android:background="@color/highlight" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>